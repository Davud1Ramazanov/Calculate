<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="152dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="16dp"
            android:text="Калькулятор"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button59"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:onClick="clearInput"
                android:text="C"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button60"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="±"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button61"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="←"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol0"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:onClick="Expressions"
                android:backgroundTint="#FBBD00"
                android:text="÷"
                android:textSize="25dp" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/number9"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number8"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number7"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol1"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:onClick="Expressions"
                android:backgroundTint="#FFC107"
                android:text="*"
                android:textSize="25dp" />

        </TableRow>

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/number6"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number5"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number4"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol2"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:onClick="Expressions"
                android:backgroundTint="#FFC107"
                android:text="-"
                android:textSize="25dp" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/number3"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number2"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/number1"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol3"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:onClick="Expressions"
                android:backgroundTint="#FFC107"
                android:text="+"
                android:textSize="25dp" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/symbol9"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text=","
                android:textSize="25dp" />

            <Button
                android:id="@+id/number0"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol10"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:text="%"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol4"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:onClick="calculateResult"
                android:backgroundTint="#FFC107"
                android:text="="
                android:textSize="25dp" />
        </TableRow>

        <TableRow android:layout_width="wrap_content">

            <Button
                android:id="@+id/symbol6"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="("
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol7"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text=")"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol8"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="X²"
                android:textSize="25dp" />

            <Button
                android:id="@+id/symbol5"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="√"
                android:textSize="25dp" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/inputNumbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="0"
            android:textSize="55dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
